<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektLab"
             xmlns:Prime="clr-namespace:Prime;assembly=Prime" x:Class="ProjektLab.Prime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="Auto" Background="White"
    >
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Adjon meg egy számot." FontWeight="Bold" Foreground="Black" Background="White"
                   Grid.ColumnSpan="2"
                   Grid.Row="0"
                   />
        <Label Content="Vizsgálandó szám:" Grid.Row="1"></Label>
        <TextBox Grid.Row="1" Grid.Column="1" Validation.Error="TextBox_Error" Name="NumberInput">
            <TextBox.Text>
                <Binding UpdateSourceTrigger="PropertyChanged" Path="MyNumber.LocalNumber" NotifyOnValidationError="True">
                    <Binding.ValidationRules>
                        <local:StringToUintValidationRule ValidationStep="RawProposedValue" ValidatesOnTargetUpdated="True"/>
                        <local:GreaterThanZeroValidationRule ValidationStep="RawProposedValue" ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
            <Validation.ErrorTemplate>
                <ControlTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                        <!-- Placeholder for the TextBox itself -->
                        <AdornedElementPlaceholder x:Name="textBox"/>
                    </StackPanel>
                </ControlTemplate>
            </Validation.ErrorTemplate>
        </TextBox>
        <Button Content="Ellenőrzés" Grid.Row="2" Grid.ColumnSpan="2"
                Click="Button_Click"
                Name="Button"
                IsEnabled="False"
                ></Button>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
            <Separator/>
            <TextBlock Name="Result">
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
